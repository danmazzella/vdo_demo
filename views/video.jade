extends layout

block content
  .pageTitle
    | Video Stream Example
  .form
    .description    
      |  Provide a stream URL and click submit.
    .inputs
      form(method="POST", action="/video", class="frmVideo", id="frmVideo")
        input(type="hidden", id="sensitivity", name="sensitivity", value="#{sensitivity}")   
        .videoDiv
          input(type="text", class="videoFile", id="txtVideoUrl", name="txtVideoUrl", placeholder="Video Url (Image Snapshot)", value="#{!videoUrl ? '' : videoUrl}")
        .options
            select(name="algorithm", id="algorithm")
                option(value="-1", style="text-indent:20px;")
                    | -- Algorithm --
                if (algorithm === 0)
                    option(value=0, name="algorithm", selected) Moving Object
                else 
                    option(value=0, name="algorithm") Moving Object
                    
                if (algorithm === 1)
                    option(value=1, name="algorithm", selected) Pedestrian
                else
                    option(value=1, name="algorithm") Pedestrian    

                if (algorithm === 2)              
                    option(value=2, name="algorithm", selected) Pedestrian & Head and Shoulder
                else
                    option(value=2, name="algorithm") Pedestrian & Head and Shoulder
                
                if (algorithm ===4)            
                    option(value=4, name="algorithm", selected) Pedestrian Tracking
                else
                    option(value=4, name="algorithm") Pedestrian Tracking
    .description
        |Sensitivity                
    div(id="slider")
             
        // select(name="sensitivity", id="sensitivity")
        //     - var cnt = 0
        //     option(value="-1") -- Detection Sensitivity --
        //     while cnt < 10
        //         - cnt++
        //         option(value="#{cnt}") #{cnt}
            
            
    .upload-file
        input(type="button", value="SUBMIT", class="videoButton" ).submit-video-button
        input(type="button", value="RESET VIDEO", class="resetVideoButton").reset-video-button  
                         
    .error
        | #{error}
       input(type="hidden", value="#{isError}")     
  if (results) 
    .image
      - var placeholder = "/images/placeholder.jpg";
      input(type="hidden", id="hidVidoeImageUrl", value="#{videoImageUrl}")
      img(src="#{!videoImageUrl ? placeholder : videoImageUrl }", id="rtVideo")
